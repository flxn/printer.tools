---
import Layout from '../layouts/Layout.astro';
import ResourceList from '../components/ResourceList.jsx';
import PopularTools from '../components/PopularTools.jsx';
import { resources, categories } from '../data/resources.js';

const seoProps = {
	title: "Printer.tools - 3D Printing Tools & Resources",
	description: "Discover essential 3D printing tools, slicer guides, and expert-curated resources. Free QR code to STL generator, optimization guides for FDM printing, and comprehensive 3D printing software reviews.",
	keywords: ["3D printing tools", "slicing software", "3D printer guides", "FDM printing", "QR code to STL", "Cura settings", "PrusaSlicer", "OrcaSlicer", "3D printing optimization"]
};
---

<Layout {...seoProps}>
	<div class="container mx-auto px-6 py-8">
		{/* Hero Section */}
		<div class="text-center mb-12">
			<h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">
				3D Printing Tools & Resources
			</h1>
			<p class="text-lg text-gray-600 max-w-2xl mx-auto mb-8">
				Your resource hub for software tools, guides, and other resources to enhance your 3D printing experience.
			</p>
		</div>

		{/* Resource List */}
		<ResourceList resources={resources} categories={categories} client:visible />

		{/* Tips Section */}
		<div class="mt-16 bg-gray-50 rounded-lg p-6 border border-gray-200">
			<h2 class="text-2xl font-semibold text-gray-900 mb-4 flex items-center">
				<svg class="w-6 h-6 mr-2 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
				</svg>
				Tips
			</h2>
			<div class="text-gray-700 space-y-3">
				<p class="flex items-center">
					<svg class="w-5 h-5 mr-2 text-yellow-500 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
						<path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
					</svg>
					Click the star icon next to any resource to mark it as a favorite. Your favorites will appear at the top of the page for quick access.
				</p>
				<p class="flex items-center">
					<svg class="w-5 h-5 mr-2 text-blue-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
					</svg>
					Have a suggestion for a new tool or resource? Email me at <a href="mailto:printertools@flxn.de" class="ml-1 text-blue-600 hover:text-blue-800 underline">printertools@flxn.de</a>
				</p>
			</div>
		</div>
	</div>
</Layout>
